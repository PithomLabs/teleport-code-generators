{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "module": "esnext",
    "target": "es2019",
    "declaration": true,
    "lib": ["es2015", "dom"],
    "sourceMap": true,
    "types": ["node", "jest"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "typeRoots" : [	
      "node_modules/@types"	
    ]
  },
  "references": [
    {"path": "packages/"}
  ],
  "exclude": [
    "examples",
    "**/dist/**",
    "./__tests__/**/*"
  ]
}
